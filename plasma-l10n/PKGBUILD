_locales=(ar ast bg ca cs el es et de fr gl hr hu id it ja nl pl pt pt_BR ro ru sr sv tr zh_CN zh_TW)
 
build() {
  for l in ${_locales[@]}; do
    ${srcdir}/autogen.sh $l
    mkdir -p build/$l
    cd build/$l
    cmake ../../$l \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release
    make
    cd ../..
  done
}
 
package() {
  for l in ${_locales[@]}; do
    cd build/$l
    make DESTDIR=${pkgdir} install
    cd ../..
  done
}
